<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingRight="20dp" >


    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_1"
        android:layout_marginLeft="71dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_2"
        android:layout_marginLeft="71dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="45dp"
        android:layout_height="65dp"
        android:layout_below="@+id/view_1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/male_treeline" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="71dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_2"
        android:layout_below="@+id/image"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_appback"
        android:gravity="center"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/firstIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/wx_login" />

        <ImageView
            android:id="@+id/secondIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/firstIcon"
            android:layout_toRightOf="@+id/firstIcon"
            android:src="@drawable/wx_login" />

        <ImageView
            android:id="@+id/thirdIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/secondIcon"
            android:layout_toRightOf="@+id/secondIcon"
            android:src="@drawable/wx_login" />

        <ImageView
            android:id="@+id/fourthIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/secondIcon"
            android:layout_below="@+id/secondIcon"
            android:src="@drawable/wx_login" />

        <ImageView
            android:id="@+id/fifthIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/thirdIcon"
            android:layout_alignTop="@+id/fourthIcon"
            android:src="@drawable/wx_login" />
        
        <TextView
            android:id="@+id/locText"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_above="@+id/firstIcon"
            android:layout_alignLeft="@+id/firstIcon"
            android:layout_alignRight="@+id/thirdIcon"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="8.0sp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/locText"
            android:layout_alignLeft="@+id/locText"
            android:layout_alignRight="@+id/locText"
            android:gravity="center"
            android:text="10 : 00"
            android:textColor="@color/white"
            android:textSize="10.0sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_2"
        android:layout_below="@+id/image"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-20dp"
        android:layout_toLeftOf="@+id/image"
        android:background="@drawable/widget_tip_green"
        android:padding="10dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:paddingLeft="5dp"
            android:text="有自定义事件"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>